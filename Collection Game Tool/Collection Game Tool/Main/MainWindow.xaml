<Window x:Class="Collection_Game_Tool.Main.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gs="clr-namespace:Collection_Game_Tool.GameSetup"
        xmlns:pl="clr-namespace:Collection_Game_Tool.PrizeLevels"
        xmlns:dv="clr-namespace:Collection_Game_Tool.Divisions"
        Title="Collection Game Tool" Height="800" Width="1200"
        xmlns:service="clr-namespace:Collection_Game_Tool.Services">
    <StackPanel>
        <StackPanel.Resources>
            <service:CreateOpacityConverter x:Key="OpacityConverter"/>
        </StackPanel.Resources>
        
        <StackPanel Orientation="Horizontal" Background="white">
            <Image Source="logo.png" Margin="10"></Image>
            <Label Foreground="Blue" Background="white" FontSize="48">Collection Game Generator</Label>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <pl:UserControlPrizeLevels></pl:UserControlPrizeLevels>
            <gs:GameSetupUC></gs:GameSetupUC>
            <gs:GameSetupUC></gs:GameSetupUC>
        </StackPanel>

        <Button
            Name="CreateButton"
            Width="60"
            IsEnabled="{Binding Path=canCreate}"
            Opacity="{Binding Path=canCreate, Converter={StaticResource OpacityConverter}}">Create</Button>
    </StackPanel>
</Window>
